<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApp" parent="@android:style/Theme.Material.Light.NoActionBar"/>

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
    </style>
</resources>
